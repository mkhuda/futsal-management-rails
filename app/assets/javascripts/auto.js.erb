
var auto;
auto = function() {
	$('.auto-true').bind('railsAutocomplete.select', function(event, data){
			var url = window.location.origin;
			var futsal_id = data.item.id;
			var futsal_name = (data.item.label).replace(" ", "-").toLowerCase();
			var the_url = url+"/futsal/arena/"+futsal_id+"-"+futsal_name;
			Turbolinks.visit(the_url);
			console.log(window.location.pathname);
	});
	$('.auto-true').focus(function() {
		$(this).autocomplete( "search", "");
		$("ul.ui-autocomplete").css("display", "block");
		
	});
}
$(document).ready(auto);
$(document).on('page:load', auto);