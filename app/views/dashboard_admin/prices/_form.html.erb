
	<%= form_for([:dashboard_admin, @price], :html => {:class => "form-horizontal"}) do |f| %>

	<div class="form-group">
		<%= f.label :hari, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
    <%= f.radio_button :hari, 'Senin - Jumat' %> Senin - Jumat<br />			
	<%= f.radio_button :hari, 'Sabtu' %> Sabtu <br />
	<%= f.radio_button :hari, 'Minggu' %> Minggu <br />
		</div>
	</div>

	<div class="form-group">
	<%= f.label "Jam Mulai", class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
<div class='input-group date' id='datetimepicker3' class="timepicker">
                    <input name="price[jam_mulai]" type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                    </span>
                </div>
                </div>
  </div>

  <div class="form-group">
	<%= f.label "Jam Berakhir", class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
<div class='input-group date' id='datetimepicker4'>
                    <input name="price[jam_akhir]" type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                    </span>
                </div>
                </div>
  </div>

    <div class="form-group">
	<%= f.label "Harga", class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
<div class='input-group'>
					<span class="input-group-addon">
                        Rp
                    </span>
                    <input name="price[harga]" type='text' class="form-control" />
                    
                </div>
                </div>
  </div>
<script>
$(function () {
                $('#datetimepicker3').datetimepicker({
                    format: 'LT'
                });
                $('#datetimepicker4').datetimepicker({
                    format: 'LT'
                });
            });
</script>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-8">
		  <%= f.submit "Simpan Sekarang", class: "btn btn-lg btn-danger" %>
		</div>
	</div>
<% end %>